@model List<Course>
@{
	var courses = Model;
	Layout = "Courses";
}<hr />
<h2 class="text-center">@courses.Count Courses</h2>
<hr>
<div class="text-center "><a class="bi bi-pen btn btn-success" asp-action="Add">Add New Course</a>
	| <a asp-action="Search" class="btn btn-success" asp-fragment="#">Search</a>
</div><hr />
@{
	<div style="padding-right:70px;padding-left:25px">
		<table  class="table table-hover  table-bordered m-4 fw-bold table-striped" id="#" style="background-color:lightgray;">
	<tr>
        <th style="background-color:cadetblue">#</th>
				<th style="font-size:20px;background-color:cadetblue">Name</th>
				<th colspan="3" class="text-center" style="background-color:cadetblue">Action</th>
			</tr>
   @for (int i = 0; i < courses.Count; i++)
		{
			<tr>
			    <td>@(i+1)</td> 
					<td style="font-family:Courier New, Courier, monospace">@courses[i].Name</td>
					<td class="text-center">
				     <a asp-action="Details" asp-route-id="@courses[i].Id" class="bi bi-tag btn btn-primary btn-sm">Details </a>
						<a asp-action="Edit" asp-route-id="@courses[i].Id" class="bi bi-pencil btn btn-warning btn-sm" aria-hidden="true" >Edit </a>
						<a asp-action="Delete" asp-route-id="@courses[i].Id" asp-fragment="#" class="bi bi-trash btn btn-danger btn-sm" aria-hidden="true" onclick="return confirm('Are you Sure to Delete ?')">Delete</a>
				</td>

			</tr>
		}
</table>
</div>
}
