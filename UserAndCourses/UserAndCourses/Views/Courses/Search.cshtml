@model List<Course>
@{
	var courses = Model;
	//var bag = ViewBag.SearchString;
}
<h1> Index</h1>
<form asp-action="Search">
	<div class="form-group">
		<label >Search :</label>
		<input type="text" name="SearchString" />
		<input type="submit" asp-action="Search" value="Search" class="btn btn-primary" />
	</div>
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Hours
			</th>
			<th>
				Description
			</th>
			<th>
				Price
			</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				@for (int i = 0; i < courses.Count; i++)
				{
					<h5>@courses[i].Name</h5>
					<h5>@courses[i].Hours</h5>
					<h5>@courses[i].Description</h5>
					<h5>@courses[i].Price</h5>
				}
			</td>
		</tr>
	</tbody>
</table>
