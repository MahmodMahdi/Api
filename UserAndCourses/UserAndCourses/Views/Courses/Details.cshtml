@model CourseViewModel
@{
	var course = Model;
}
<div class="card card-header">
	<h1 class="text-center border border-3 bg-dark" style="color:lightgreen">Selected Item</h1>
<div class="card">
   <div class="card-body text-center shadow ">
			<h3 class="card-title p-3">Name :  @course.Name</h3>
	   <h5 >Price : @course.Price$</h5>
	   <h6 >Hours : @course.Hours Hours</h6>
			<p class="card-text  text-danger " >Description : @course.Description</p> 
			<div>
				<a asp-action="Index" asp-fragment="#" class=" btn btn-dark fw-bold m-3">Return back</a>
				<a asp-action="Edit" asp-fragment="#" asp-route-id="@course.Id" class=" btn btn-info  fw-bold m-3">Edit</a>
				<a asp-action="Delete" asp-fragment="#" asp-route-id="@course.Id" class=" btn btn-danger fw-bold m-3" onclick="return confirm('Are you Sure to delete ?')">Delete</a>
			</div>
   </div>
</div>
</div>
