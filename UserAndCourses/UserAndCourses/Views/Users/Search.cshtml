@model List<User>
@{
	var users = Model;
	//var bag = ViewBag.SearchString;
}
<h1> Search by name :</h1>
<form asp-action="Search">
	<div class="form-group">
		<label>Search :</label>
		<input type="text" name="SearchString" />
		<input type="submit" asp-action="Search" value="Search" class="btn btn-primary" />
		
	</div>
</form>
<a asp-action="Index" asp-fragment="i" class="btn btn-success">Return back</a>
<table class="table table-hover  table-bordered m-4 fw-bold table-striped">
	<thead>
		<tr>
			<th>
				Name
			</th>
			<th>
				Age
			</th>
			<th>
				Address
			</th>
			<th>
				Phone
			</th>
			<th>
				Email
			</th>
		</tr>
	</thead>
	<tbody>
			@for (int i = 0; i < users.Count; i++)
				{
		        <tr>
			
					<td>@users[i].Name</td>
					<td>@users[i].Age</td>
					<td>@users[i].Address</td>
					<td>@users[i].Phone</td>
					<td>@users[i].Email</td>
			    </tr>
			}
	</tbody>
</table>
