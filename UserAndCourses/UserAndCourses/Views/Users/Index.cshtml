@model List<User>
@{
	var users = Model;
	Layout = "_MyAmazingLayout";
}
	<h2 class="text-center">@users.Count Users</h2>
	<hr />
<div class="text-center"><a id="i" class="bi bi-pen btn btn-success" asp-action="Add">Add User</a>
	| <a asp-action="Search" class="btn btn-success" asp-fragment="i">Search</a>
</div> 
@{
	<div style="padding-right:70px;padding-left:30px" >
		<table class="table table-hover  table-bordered m-4 fw-bold table-striped" style="background-color:lightgray;">
			<tr style="background-color:steelblue">
				<th>#</th>
				<th style="font-size:20px">Name</th>
				<th colspan="3" class="text-center">Action</th>
			</tr>
			@for (int i = 0; i < users.Count; i++)
			{
				<tr>
					<td>@(i + 1)</td>
					<td style="font-family:italic">@users[i].Name</td>
					<td class="text-center">
						<a asp-action="Details" asp-route-id="@users[i].Id" class="btn btn-sm" style="background-color:royalblue;color:white">Details </a>
						<a asp-action="Edit" asp-route-id="@users[i].Id" class=" btn btn-warning btn-sm">Edit </a>
						<a asp-action="Delete" asp-fragment="i" asp-route-id="@users[i].Id" class=" bi bi-trash btn btn-danger btn-sm">Delete</a>
				    </td>

				</tr>
			}
		</table>
		<hr>
	</div>
}